:css
  @import url(http://fonts.googleapis.com/css?family=Antic+Slab);

  html,body {
    height:100%;
    margin-top: 0px;
  }

  h1 {
    font-family: 'Titillium Web', sans-serif;
    font-size:80px;
    color:#ffffff;
  }

  .lead {
    color:#ffffff;
  }


  /* Custom container */
  .container-full {
    margin: 0 auto;
    width: 100%;
    min-height:100%;
    background-color: #1a4055;
    color:#eee;
    overflow:hidden;
  }
  .sliding_background{
    position: absolute;
    background:url(#{asset_path 'background.jpg'}) repeat-x;
    height: 315px;
    width: 100%;
  }
  .container-full a {
    color:#efefef;
    text-decoration:none;
  }

  .v-center {
    margin-top:7%;
  }
.sliding_background &nbsp
.container-full
  .row
    .col-lg-12.text-center.v-center
      %p= image_tag "logo.png"
      %br/
      %br/
      .col-md-4.col-md-offset-4
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.email_field :email, class: "form-control input-lg", :autofocus => true, placeholder: "Enter your email"
          .form-group
            = f.password_field :password, class: "form-control input-lg", placeholder: "Enter your password"
          .form-group
            = f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm password"
          .form-group= f.submit "Create account", class: "btn btn-success btn-lg btn-block"
  / /row
  %br/
  %br/
  %br/
  %br/
  %br/
/ /container full
%script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js", :type => "text/javascript"}
