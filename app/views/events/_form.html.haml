.col-md-4.col-md-offset-4
  .text-center{style: "margin-bottom: 20px"}
    = image_tag "logo_small.png"
  = form_for @event, :html => { :class => 'form-horizontal' } do |f|
    .form-group
      = f.text_field :name, class: "form-control input-lg", placeholder: "Event name"
    .form-group
      .row
        .col-md-6
          = f.submit "Create event", class: "btn btn-primary btn-lg btn-block"
        .col-md-6
          %a.btn.btn-default.btn-lg.btn-block{:href => events_path, :role => "button"} Cancel
